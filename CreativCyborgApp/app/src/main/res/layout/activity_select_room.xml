    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.phone.SelectRoomActivity"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/select_room_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="Raum auswÃ¤hlen"
            app:navigationIcon="@drawable/ic_baseline_arrow_back"
            app:navigationIconTint="?attr/colorOnSurface"></com.google.android.material.appbar.MaterialToolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <ListView
        android:id="@+id/room_ListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:drawSelectorOnTop="true"></ListView>
</LinearLayout>